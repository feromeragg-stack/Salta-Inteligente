// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Production: PostgreSQL via env var
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo unificado para todos los puntos de interés y ferias
model Punto {
  id          Int       @id @default(autoincrement())
  nombre      String
  descripcion String?
  latitud     Float
  longitud    Float
  categoria   Categoria // Usamos un Enum para las categorías
  creadoEn    DateTime  @default(now())
}

// Nota de Mentor: Hemos pivotado el enum Categoria hacia puntos verdes
// para alinear el proyecto con la nueva visión ecológica.
// Simplificado a solo 2 categorías principales
enum Categoria {
  COMPOSTA
  RECICLAJE
}
